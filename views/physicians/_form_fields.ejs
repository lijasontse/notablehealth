<div class="form-group">
  <label for="firstName">First Name</label>
  <input required value="<%= physician.firstName %>" type="text" name="firstName" id="firstName" class="form-control">
</div>

<div class="form-group">
  <label for="lastName">Last Name</label>
  <input required value="<%= physician.lastName %>" type="text" name="lastName" id="lastName" class="form-control">
</div>

<div class="form-group">
  <label for="email">Email</label>
  <input value="<%= physician.email %>" type="text" name="email" id="email" class="form-control">
</div>


<a href="/" class="btn btn-secondary mt-4">Cancel</a>
<button type="submit" class="btn btn-primary mt-4">Save</button>